<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dosaImage"
            android:layout_width="63dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user_foreground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dosaType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="종류"
                android:fontFamily="@font/fontinfo"
                android:textSize="10sp"
                android:textColor="@color/selector_item_gray_color" />
            <TextView
                android:id="@+id/dosaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/fontinfo"
                android:text="랜덤이름"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dosa_item_Callon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dosacallon_foreground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
    </ImageView>
    <ImageView
        android:id="@+id/dosa_item_CallOff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dosacalloff_foreground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>


